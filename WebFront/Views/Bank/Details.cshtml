@model WebFront.Models.Bank

@{
    ViewBag.Title = "Accounts at";
    ViewBag.Message = Model.Title;
}

<div class="row">
    <div class="col-lg-12">
        <div class="page-header">
            <h1>@ViewBag.Title <small>@ViewBag.Message</small></h1>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table">
            <tr>
                <th>
                    Account Name
                </th>
                <th>
                    Balance
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.BankAccounts)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Title)
                    </td>
                    <td>
                        @string.Format("{0:C}", ViewBag.Balance)
                    </td>
                    <td>
                        @Html.ActionLink("Update", "Update", new { id = item.BankAccountID })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <p>
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
</div>
