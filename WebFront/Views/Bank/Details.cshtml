@model WebFront.Models.Bank

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Bank</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

    </dl>
</div>
<table class="table">
    <tr>
        <th>
            Account Name
        </th>
        <th>
            Balance
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.BankAccounts)
    {
        <tr>
            <td>
                @Html.DisplayFor(m => item.Title)
            </td>
            <td>
                @string.Format("{0:C}", ViewBag.Balance)
            </td>
            <td>
                @Html.ActionLink("Update", "Update", new { id = item.BankAccountID })
            </td>
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.BankID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
